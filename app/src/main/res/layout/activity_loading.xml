<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_gray">

    <ImageView
        android:id="@+id/iv_b"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/d_fafafa_r22"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/loading_logo"
        app:layout_constraintBottom_toBottomOf="@id/iv_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_b" />

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:background="@mipmap/loading_bottom"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@mipmap/name_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_b" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginHorizontal="66dp"
        android:layout_marginBottom="98dp"
        android:max="100"
        android:progress="90"
        android:progressDrawable="@drawable/layer_loading"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>