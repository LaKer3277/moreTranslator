<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:background="@color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#292F37"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_text"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:src="@mipmap/text"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sub"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@mipmap/icon_sub"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="@id/iv_set"
        app:layout_constraintBottom_toBottomOf="@id/iv_set"
        app:layout_constraintRight_toLeftOf="@id/iv_set"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_set"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@mipmap/set"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_text"
        app:layout_constraintBottom_toBottomOf="@id/iv_text"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_text_translate"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:src="@mipmap/home1"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_text"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:src="@mipmap/home2"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@id/iv_text_translate"
        app:layout_constraintLeft_toLeftOf="@id/iv_text_translate"
        app:layout_constraintBottom_toBottomOf="@id/iv_text_translate"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_camera_translate"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:src="@mipmap/home3"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_text_translate"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:src="@mipmap/home4"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@id/iv_camera_translate"
        app:layout_constraintLeft_toLeftOf="@id/iv_camera_translate"
        app:layout_constraintBottom_toBottomOf="@id/iv_camera_translate"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_vpn"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:src="@mipmap/home5"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_camera_translate"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:src="@mipmap/home6"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@id/iv_vpn"
        app:layout_constraintLeft_toLeftOf="@id/iv_vpn"
        app:layout_constraintBottom_toBottomOf="@id/iv_vpn"
        />
    <include
        android:id="@+id/server_home_ad"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_margin="20dp"
        layout="@layout/native_connect_server"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:scaleType="fitXY"
        android:layout_margin="20dp"
        android:src="@mipmap/server_home_cover"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>