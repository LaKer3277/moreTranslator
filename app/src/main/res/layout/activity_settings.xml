<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293038">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:drawableStart="@drawable/ic_rate"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="Rate us"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/ic_privacy"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="Privacy Policy"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_rate"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/ic_feedback"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="Feedback"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_privacy"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/edit_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="itrPopShow"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_feedback"/>
    <EditText
        android:id="@+id/edit_itr_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="itr_v"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_popup"/>
    <EditText
        android:id="@+id/edit_referrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="referrer"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_itr_v"/>
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_referrer"/>

    <include
        android:id="@+id/include_nav"
        layout="@layout/include_navigate"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>