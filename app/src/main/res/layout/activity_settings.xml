<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293038">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:drawableStart="@drawable/ic_rate"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:text="Rate us"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/ic_privacy"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:text="Privacy Policy"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_rate" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/ic_feedback"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:text="Feedback"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_privacy" />

    <include
        android:id="@+id/include_nav"
        layout="@layout/include_navigate"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>